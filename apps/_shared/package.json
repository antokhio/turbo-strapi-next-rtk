{
  "name": "@app/shared",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "tsup": "^8.3.5",
    "@strapi/types": "5.3.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "yarn build",
    "watch": "yarn dev",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint"
  },
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "splitting": true,
    "legacyOutput": false,
    "format": [
      "esm",
      "cjs"
    ],
    "clean": false,
    "entry": [
      "src/index.ts",
      "src/**/*.ts"
    ]
  }
}
